console.log('js is working!')

fetch("http://localhost:5014/api/journal/getJournals")
    .then(response=>response.json())
    .then(data=>{
	//display fetch data
	//get table object
	const table=document.getElementById('journal')

	data.forEach(function(d,index){
	    //create new row for each record
	    let row=document.createElement('tr')
	    table.append(row)

	    //create new cells for each prop
	    //id
	    let cell=document.createElement('td')
	    //alternative row background-color changes
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'
	    cell.innerHTML=d.journalId
	    //add cell to table
	    table.append(cell)

	    //date
	    cell=document.createElement('td')
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'

	    //create new span element so we can add flex to it
	    let element=document.createElement('span')
	    element.innerHTML=d.date
	    //add span to cell
	    cell.append(element)
	    //add cell to table
	    table.append(cell)

	    //paticulars
	    cell=document.createElement('td')
	    cell.setAttribute('class','particular-parent')
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'

	    //create span element for using flexbox style on
	    //particular 1
	    let particular1=document.createElement('span')
	    particular1.innerHTML=d.particular1
	    cell.append(particular1)

	    let to=document.createElement('span')
	    to.innerHTML='to'
	    cell.append(to)

	    //particular 2
	    let particular2=document.createElement('span')
	    particular2.innerHTML=d.particular2
	    cell.append(particular2)

	    //finally add cell to table
	    table.append(cell)

	    //LF
	    cell=document.createElement('td')
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'
	    element=document.createElement('span')
	    element.innerHTML=d.journalId

	    //add span to cell
	    cell.append(element)
	    table.append(cell)

	    //debit
	    cell=document.createElement('td')
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'
	    cell.innerHTML=d.debit
	    table.append(cell)

	    //credit
	    cell=document.createElement('td')
	    cell.style.backgroundColor = index % 2 == 0 ? '606060' : '4d4d4d'
	    cell.innerHTML=d.credit
	    table.append(cell)
	})
    })
